<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd   
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

    <context:annotation-config />
	<mvc:annotation-driven/>
	<context:component-scan base-package="com.artqiyi.doushouqi" >		<!--避免扫描到service加载没有代理的对象-->
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>
	</context:component-scan>

	<!--上传文件-->
	<!--<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>-->

	<!-- 视图解析器，JSP-->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.InternalResourceView"/>
		<!-- 设置前缀，即视图所在的路径 -->
		<property name="prefix" value="/jsp/"/>
		<!-- 设置后缀，即视图的扩展名 -->
		<property name="suffix" value=".jsp"/>
	</bean>

	<!-- 返回结果解析为json格式-->
	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter"/>
			<bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<!--配置拦截器 -->
	<mvc:interceptors>
		<!--<mvc:interceptor>-->
		<!--<mvc:mapping path="/*"/>  &lt;!&ndash; 拦截请求路径配置  &ndash;&gt;-->
		<!--</mvc:interceptor>-->
		<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" />
		<bean class="com.artqiyi.doushouqi.aspect.AuthInterceptor"></bean>
	</mvc:interceptors>

	<!--配置静态资源使用tomcat自身的defaultServlet处理-->
	<mvc:default-servlet-handler/>
 
</beans>
